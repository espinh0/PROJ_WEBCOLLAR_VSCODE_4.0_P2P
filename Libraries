// Arquivo central para carregar bibliotecas externas.

function loadLibrary(tag, attributes) {
    const element = document.createElement(tag);
    for (const key in attributes) {
        element[key] = attributes[key];
    }
    document.head.appendChild(element);
}

// Carrega Bootstrap 5.3.3 CSS
loadLibrary('link', {
    rel: 'stylesheet',
    href: 'https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css',
    integrity: 'sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH',
    crossOrigin: 'anonymous'
});

// Carrega Font Awesome 6.5.2 CSS
loadLibrary('link', {
    rel: 'stylesheet',
    href: 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css',
    integrity: 'sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==',
    crossOrigin: 'anonymous',
    referrerpolicy: 'no-referrer'
});

// Carrega Bootstrap 5.3.3 JS Bundle (com Popper.js)
// Usamos 'defer' para garantir que o script execute ap├│s o parsing do HTML mas antes do DOMContentLoaded
loadLibrary('script', {
    src: 'https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js',
    integrity: 'sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz',
    crossOrigin: 'anonymous',
    defer: true
});

console.log("Bibliotecas externas (Bootstrap, Font Awesome) carregadas via 'Libraries'.");
